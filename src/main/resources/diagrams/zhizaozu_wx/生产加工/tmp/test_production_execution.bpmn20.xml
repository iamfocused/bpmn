          <activiti:field name="language">
            <activiti:string><![CDATA[groovy]]></activiti:string>
          </activiti:field>
          <activiti:field name="script">
            <activiti:string><![CDATA[import groovy.json.JsonSlurper
    						import groovy.json.JsonOutput
    						
    						def jsonSlurper = new JsonSlurper()
    						execution.setVariable('reportRecords', '[]')
    						//物料相关信息
    						def mProcInstId  = jsonSlurper.parseText(meterialCode).code
    						execution.setVariable('meterialSpec', findValueByVarName(historyService, mProcInstId, 'meterialSpec'))
    						
    						//工艺信息
    						execution.setVariable('craftCode', jsonSlurper.parseText(craftProcess).code.split('/')[1])
    						execution.setVariable('processNo', jsonSlurper.parseText(craftProcess).code.split('/')[2])
    						
    						def cProcInstId = jsonSlurper.parseText(craftProcess).code.split('/')[0]
    						execution.setVariable('craftName', findValueByVarName(historyService, cProcInstId, 'craftName'))
    						//判断工序号
    						def processStdStr = findValueByVarName(historyService, cProcInstId, 'tbhdprocess_item_std')
    						def std = jsonSlurper.parseText(processStdStr)
    						def row = std.find {it.processNo == jsonSlurper.parseText(craftProcess).code.split('/')[2]}
    						if (row == null) {
    							throw new org.activiti.engine.ActivitiIllegalArgumentException('工序号错误')
    						}
    						
    						//工序信息
    						execution.setVariable('processCode', row.processCode.name)
    						def pProcInstId = row.processCode.code
    						execution.setVariable('processName', findValueByVarName(historyService, pProcInstId, 'processName'))
    						execution.setVariable('processDesc', findValueByVarName(historyService, pProcInstId, 'processDesc'))
    						execution.setVariable('processType', findValueByVarName(historyService, pProcInstId, 'processType'))
    						execution.setVariable('deviceSpec', findValueByVarName(historyService, pProcInstId, 'deviceSpec'))
    						execution.setVariable('clampingQuantity', findValueByVarName(historyService, pProcInstId, 'clampingQuantity'))
    						execution.setVariable('personnelOperationTime', findValueByVarName(historyService, pProcInstId, 'personnelOperationTime'))
    						execution.setVariable('manualDetectionTime', findValueByVarName(historyService, pProcInstId, 'manualDetectionTime'))
    						execution.setVariable('processingTime', findValueByVarName(historyService, pProcInstId, 'processingTime'))
    						execution.setVariable('processTime', findValueByVarName(historyService, pProcInstId, 'processTime'))
    						execution.setVariable('processPreparation', findValueByVarName(historyService, pProcInstId, 'processPreparation'))
    						execution.setVariable('preparationDate', findValueByVarName(historyService, pProcInstId, 'preparationDate'))
    						execution.setVariable('processAudit', findValueByVarName(historyService, pProcInstId, 'processAudit'))
    						execution.setVariable('auditDate', findValueByVarName(historyService, pProcInstId, 'auditDate'))
    						execution.setVariable('curRemain', productionQuantity)
    						
    						//工步
    						execution.setVariable('tbhdworksteps_item', findValueByVarName(historyService, pProcInstId, 'tbhdworksteps_item'))
    						execution.setVariable('tbhdworksteps_item_std', findValueByVarName(historyService, pProcInstId, 'tbhdworksteps_item_std'))
    						
    						//工段
    						execution.setVariable('sectionGroup', jsonSlurper.parseText(section).code)
    						static String findValueByVarName(def historyService, String procInstId, String variableName) {
							    def vars = historyService.createHistoricVariableInstanceQuery().processInstanceId(procInstId).list()
							    def valueOpt = vars.stream().filter({var -> variableName.equals(var.getVariableName())}).map({var -> var.getValue()}).findFirst()
							    if (!valueOpt.isPresent()) {
									throw new org.activiti.engine.ActivitiIllegalArgumentException('数据获取失败' + procInstId + ',' + variableName)
							    }
							    return valueOpt.get()
							}]]></activiti:string>
          </activiti:field>
